{
  "name": "electron-trpc",
  "description": "Electron support for tRPC",
  "version": "0.7.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsonnull/electron-trpc.git"
  },
  "homepage": "https://electron-trpc.dev",
  "bugs": {
    "url": "https://github.com/jsonnull/electron-trpc/issues"
  },
  "keywords": [
    "electron",
    "trpc",
    "ipc",
    "rpc",
    "typescript"
  ],
  "exports": {
    "./main": {
      "require": "./dist/main.cjs",
      "import": "./dist/main.mjs",
      "types": "./dist/main.d.ts"
    },
    "./renderer": {
      "require": "./dist/renderer.cjs",
      "import": "./dist/renderer.mjs",
      "types": "./dist/renderer.d.ts"
    }
  },
  "author": "Jason Nall <jsonnull@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "main.d.ts",
    "renderer.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build -c src/main/vite.config.ts && vite build -c src/renderer/vite.config.ts && pnpm build:types",
    "build:types": "dts-bundle-generator --config ./dts-bundle-generator.config.ts && pnpm run copy:types",
    "copy:readme": "cp ../../README.md ./",
    "copy:types": "cp dist/main.d.ts dist/renderer.d.ts ./",
    "test": "vitest -c vitest.config.ts",
    "test:ci": "vitest run -c vitest.config.ts --coverage",
    "prepublishOnly": "pnpm copy:readme && pnpm build",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.90.21",
    "@trpc/client": "11.10.0",
    "@trpc/server": "11.10.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.3.0",
    "@types/ws": "^8.5.14",
    "@vitest/coverage-v8": "^4.0.18",
    "builtin-modules": "^5.0.0",
    "dts-bundle-generator": "9.5.1",
    "electron": "40.6.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "superjson": "^2.2.6",
    "vite": "^7.3.1",
    "vite-plugin-commonjs-externals": "^0.1.4",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@trpc/client": ">10.0.0",
    "@trpc/server": ">10.0.0",
    "electron": ">19.0.0"
  },
  "dependencies": {
    "debug": "^4.4.3"
  }
}
